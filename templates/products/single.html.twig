{% extends 'coolBase.html.twig' %}

{% block title %}All Products{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/nouislider@15.7.0/dist/nouislider.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <style>
        .my-swiper .swiper-pagination-bullet-active {
        background-color: #dc3545 !important; /* Bootstrap red */
        }
    </style>

{% endblock %}
{% block importmap %}
    <script src="https://cdn.jsdelivr.net/npm/nouislider@15.7.0/dist/nouislider.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
{% endblock %}

    {% block sidebarBody %}
        <div class="mb-3">
            <button class="btn btn-outline-danger" type="button" data-bs-toggle="collapse" data-bs-target="#categoriesCollapse" aria-expanded="false" aria-controls="categoriesCollapse">
                Categories
            </button>

            <div class="collapse mt-2" id="categoriesCollapse">
                <div class="p-3">
                    {% if categories is defined %}
                        {% for category in categories %}
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="categoryCheckbox{{ category.id }}" value="{{ category.id }}" {% if categoriesAllowed is not defined or category.id in categoriesAllowed %} checked {% endif %}>
                                <label class="form-check-label" for="categoryCheckbox{{ category.id }}">{{ category.name }}</label>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>


        <div class="container my-4">
            <label for="price-slider" class="form-label">Price Range</label>
            <br>
            <br>
            <br>
            <div id="price-slider"></div>
            <div class="mt-3">
                <span>Min: <span id="min-price"></span>DT</span> &nbsp;-&nbsp;
                <input type="hidden" id="min-price-input" name="min-price">
                <span>Max: <span id="max-price" name="max-price"></span>DT</span>
                <input type="hidden" id="max-price-input" name="max-price">
            </div>
        </div>
        <a href="/products" style="position: absolute; bottom: 10px; right: 10px;">
            <button class="btn btn-outline-danger" id="apply-btn" type="submit">
                Apply
            </button>
        </a>

    {% endblock %}
{% block sidebar %}
{% endblock %}

{% block body %}
    <div class="container pt-5">
        <div class="row">
            <div class="col-6 h-100 relative">
                <div class="swiper vertical-slide-carousel swiper-container relative h-96">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <div class="bg-indigo-50 rounded-2xl h-96 flex justify-center items-center position-relative" style="overflow: hidden;">
                                <img src=  "{% for image in product.images %}
                                                {% if image.isPrimary %}
                                                    {{ image.imagePath }}
                                                {% endif %}
                                            {% endfor %}"
                                class="w-full h-full object-contain absolute top-0 left-0 z-0" style="filter: blur(30px);">
                                
                                <img src=  "{% for image in product.images %}
                                                {% if image.isPrimary %}
                                                    {{ image.imagePath }}
                                                {% endif %}
                                            {% endfor %}"
                                class="h-full object-contain relative z-10">
                            </div>
                        </div>
                        {% for image in product.images %}
                            {% if not image.isPrimary %}
                                <div class="swiper-slide">
                                    <div class="bg-indigo-50 rounded-2xl h-96 flex justify-center items-center position-relative" style="overflow: hidden;">
                                        <img src=  "{{ image.imagePath }}" class="w-full h-full object-contain absolute top-0 left-0 z-0" style="filter: blur(30px);">>
                                        <img src=  "{{ image.imagePath }}" class="h-full object-contain relative z-10">>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="swiper-pagination my-swiper !top-1/3 !translate-y-8"></div>
                </div>
            </div>
        </div>
    </div>

<script>
    var swiper = new Swiper(".vertical-slide-carousel", {
    loop: true,
    direction: 'vertical',
    mousewheelControl: true,
    mousewheel: {
    releaseOnEdges: true,
    },
    spaceBetween: 30,
    grabCursor: true,
    pagination: {
    el: ".vertical-slide-carousel .swiper-pagination",
    clickable: true,
    },
    });
</script>
{% endblock %}