        .section-marker::before {
            content: "";
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 6px;
            background-color: #e53e3e;
            border-radius: 3px;
        }
        /* Animation for the moving banner */
        @keyframes scrollBanner {
            0% {
