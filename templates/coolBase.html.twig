<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}GoSport{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="icon" href="{{ asset('images/logo.png') }}" type="image/x-icon">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <form method="get" action="/products/byFilters">
        <nav class="navbar container-fluid" >
            <div class="row w-100">
                <div class="col-2 container-fluid">
                    <a class="navbar-brand fw-bold" href="/products">
                    <img src="{{ asset('images/logo.png') }}" width="40" height="40">
                    GoSport
                    </a>
                </div>

                <div class="container-fluid col-7 d-flex">
                    <div class="input-group">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="keyWord" />
                        <button class="btn btn-danger" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>

                <div class="col-2 container-fluid d-flex justify-content-left">
                    
                    <div class="col-9 h-100 d-flex justify-content-left">

                        <a class="w-100 h-100 d-flex justify-content-left align-items-center text-decoration-none" href="/products">
                            <i class="bi bi-person-circle" style="font-size: 25px;"></i>
                            &nbsp;
                            {% if app.session.get('user') is not null %}
                                {{ app.session.get('user').username }}
                            {% else %}
                                sign in
                            {% endif %}
                        </a>
                    </div>

                    <div class="col-3 h-100 d-flex justify-content-center">
                        <a class="w-100 h-100 d-flex justify-content-center" href="/products">
                            <i class="bi bi-bag position-relative" style="font-size: 25px;">
                                <div class="badge">
                                    {% if app.session.get('user') is not null and app.session.get('cartItemsCount') is defined %}
                                        {{ app.session.get('cartItemsCount') }}
                                    {% else %}
                                        0
                                    {% endif %}
                                </div>
                            </i>
                        </span>
                        </a>
                        
                    </div>

                </div>
            </div>
        </nav>

        <button class="btn" style="font-size: 25px; margin-left:10px" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
        â˜°
        </button>

        <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel">
            <div class="offcanvas-header">
                {% block sidebarTitle %}
                <h5 class="offcanvas-title" id="sidebarLabel">Filter by</h5>
                {% endblock %}
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>

            <div class="offcanvas-body">
                {% block sidebarBody %}

                {% endblock %}
            </div>
        </div>

        
        {% block body %}{% endblock %}
        
        </form>
    </body>
</html>
