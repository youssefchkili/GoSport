{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="d-flex flex-column align-items-center gap-3 mb-4">
        <h1 class="display-4 text-light">Category index</h1>
        <a href="{{ path('app_category_new') }}" class="btn btn-outline-light">add new</a>
    </div>
    <div class="container my-5">
    <div class="card shadow-sm bg-dark text-light">
    <div class="card-body">
    <table class="table table-bordered table-dark mb-0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.slug }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-outline-light">show</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-outline-light">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
    </div>

    <style>
        body {
            background-color: #181a1b !important;
        }
        .table-dark th, .table-dark td {
            color: #f8f9fa;
        }
        .table-dark {
            background-color: #23272b;
        }
        .card.bg-dark {
            background-color: #23272b !important;
        }
    </style>
{% endblock %}
