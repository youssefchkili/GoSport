<form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="background-color: #00000000; padding: 1em; border-radius: 8px;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn" style="background-color: #00000000; color: #fff; border: none; padding: 0.5em 1em; border-radius: 4px;">Delete</button>
</form>
