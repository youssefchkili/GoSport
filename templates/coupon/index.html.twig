{% extends 'base.html.twig' %}

{% block title %}Coupon index{% endblock %}

{% block body %}
<div class="d-flex flex-column align-items-center gap-3 mb-4">
    <h1 class="display-4">Coupon index</h1>
    <a href="{{ path('app_coupon_new',{'product': product.id}) }}" class="btn btn-outline-secondary">Create new</a>
</div>
<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered mb-0">
                <thead>
                <tr>

                    <th>Code</th>
                    <th>Discount_value</th>
                    <th>actions</th>

                </tr>
                </thead>
                <tbody>
                    {% for coupon in coupons %}
                        <tr>

                            <td>{{ coupon.code }}</td>

                            <td>{{ coupon.discountValue }}</td>

                            <td>
                                <div class="btn btn-danger btn-sm">
                                    {{ include('coupon/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                    <tr>
                        <td colspan="12">no coupons found</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}
