{% extends 'base.html.twig' %}

{% block title %}Edit ProductImage{% endblock %}

{% block body %}
    <div class="bg-dark text-light min-vh-100 py-4">
        <div class="d-flex flex-column align-items-center gap-3 mb-4">
            <h1 class="display-3">Edit Product image</h1>
        </div>

        <div class="bg-secondary rounded p-4 mb-3">
            {{ include('product_image/_form.html.twig', {'button_label': 'Update'}) }}
        </div>
        <div class="d-flex justify-content-center gap-2 mb-3">
            <a href="{{ path('app_product_image_index', {'product': product.id}) }}"
               class="btn btn-outline-light d-flex align-items-center">
                Back to list
            </a>
        </div>

        <div class="bg-secondary rounded p-4">
            {{ include('product_image/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
